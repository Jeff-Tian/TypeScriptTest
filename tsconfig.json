{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs" ,
    "declaration": true ,
    "outDir": "./dist" ,
    "strict": true ,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./typings/*"] ,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "src/test/*"]
}
